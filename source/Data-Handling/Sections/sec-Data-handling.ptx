                               ytick={0, 5, 10, 15, 20, 25, 30}, 
                               grid=both,
                               mark options={solid}
                            ]

                            \addplot[
                               color=blue,
                               mark=square*,
                               thick
                            ] coordinates {
                               (1,16.5)
                               (2,15)
                               (3,17)
                               (4,18)
                               (5,20)
                               (6,15.5)
                               (7,14)
                            };
                            \end{axis}
                        \end{tikzpicture}
                    </latex-image>
                    
                </image>
               
            </solution>
        </example>
    </subsection>
